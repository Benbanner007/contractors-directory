---
export interface Props {
  placeholder?: string;
  showLocationInput?: boolean;
}

const { 
  placeholder = "What type of contractor do you need?",
  showLocationInput = true 
} = Astro.props;
---

<div class="search-container">
  <form class="search-form" role="search" aria-label="Find contractors">
    <div class="search-inputs">
      <div class="search-field">
        <label for="service-search" class="sr-only">Service type</label>
        <input
          id="service-search"
          type="text"
          name="service"
          placeholder={placeholder}
          class="search-input service-input"
          autocomplete="off"
        />
      </div>
      
      {showLocationInput && (
        <div class="search-field">
          <label for="location-search" class="sr-only">Location</label>
          <input
            id="location-search"
            type="text"
            name="location"
            placeholder="Raleigh, Durham, Chapel Hill..."
            class="search-input location-input"
            autocomplete="address-level2"
          />
        </div>
      )}
    </div>
    
    <button type="submit" class="search-button" aria-label="Search contractors">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Search
    </button>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.search-form');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const serviceInput = form.querySelector('input[name="service"]');
        const locationInput = form.querySelector('input[name="location"]');
        
        const service = serviceInput?.value.trim() || '';
        const location = locationInput?.value.trim() || '';
        
        // Build the search URL with parameters
        const searchParams = new URLSearchParams();
        
        if (service) {
          searchParams.set('search', service);
        }
        
        if (location) {
          searchParams.set('location', location);
        }
        
        // Redirect to contractors page with search parameters
        const baseUrl = '/contractors';
        const queryString = searchParams.toString();
        const finalUrl = queryString ? `${baseUrl}?${queryString}` : baseUrl;
        
        window.location.href = finalUrl;
      });
    }
  });
</script>

<style>
  .search-container {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .search-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    background: white;
    border-radius: var(--border-radius);
    padding: var(--space-6);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
    width: 100%;
    max-width: 600px;
  }

  .search-inputs {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .search-field {
    flex: 1;
  }

  .search-input {
    width: 100%;
    padding: var(--space-6) var(--space-8);
    border: 1px solid var(--gray-300);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xl);
    transition: var(--transition);
    text-align: center;
    min-height: 60px;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--primary-600);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    background: var(--accent-500);
    color: white;
    border: 2px solid var(--accent-500);
    padding: var(--space-6) var(--space-10);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xl);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    min-height: 60px;
  }

  .search-button:hover {
    background: var(--accent-600);
    border-color: var(--accent-600);
  }

  .search-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.2);
  }

  @media (min-width: 768px) {
    .search-inputs {
      flex-direction: row;
    }
    
    .search-form {
      flex-direction: row;
      align-items: end;
      max-width: 700px;
    }
    
    .search-button {
      white-space: nowrap;
    }
  }

  @media (max-width: 480px) {
    .search-form {
      padding: var(--space-4);
    }
    
    .search-input {
      padding: var(--space-5) var(--space-6);
      font-size: var(--font-size-lg);
      min-height: 56px;
    }
    
    .search-button {
      padding: var(--space-5) var(--space-8);
      font-size: var(--font-size-lg);
      min-height: 56px;
    }
  }
</style>