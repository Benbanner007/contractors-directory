---

<section class="category-grid-section">
  <div class="container">
    <div class="section-header">
      <h2>Popular Contractor Categories</h2>
      <p>Find trusted professionals for your next project in the Triangle area</p>
    </div>
    
    <div class="category-grid">
      {categories.map((category) => (
        <a href={`/categories/${category.slug}`} class="category-card">
          <div class="category-icon">{category.icon}</div>
          <div class="category-content">
            <h3 class="category-name">{category.name}</h3>
            <p class="category-description">{category.description}</p>
            <ul class="category-subcategories">
              {category.subcategories.slice(0, 3).map((subcategory) => (
                <li>{subcategory}</li>
              ))}
            </ul>
          </div>
        </a>
      ))}
    </div>
    
    <div class="view-all-categories">
      <a href="/categories" class="view-all-link">
        View All Categories ‚Üí
      </a>
    </div>
  </div>
</section>

<style>
  .category-grid-section {
    padding: var(--space-20) 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--font-size-3xl);
    color: var(--primary-900);
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: var(--font-size-lg);
    color: var(--gray-700);
    max-width: 600px;
    margin: 0 auto;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  .category-card {
    display: block;
    background: white;
    border-radius: var(--border-radius);
    padding: var(--space-6);
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-sm);
  }

  .category-card:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    border-color: var(--primary-900);
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gray-100);
    border-radius: 50%;
    margin: 0 auto var(--space-4);
    border: 2px solid var(--gray-200);
  }

  .category-content {
    text-align: center;
  }

  .category-name {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--primary-900);
    margin-bottom: var(--space-2);
  }

  .category-description {
    color: var(--gray-700);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
  }

  .category-subcategories {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
  }

  .category-subcategories li {
    background: var(--gray-100);
    color: var(--primary-900);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    font-weight: 500;
    border: 1px solid var(--gray-200);
  }

  .view-all-categories {
    text-align: center;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--primary-900);
    font-weight: 600;
    font-size: var(--font-size-lg);
    text-decoration: none;
    transition: var(--transition);
    padding: var(--space-3) var(--space-6);
    border: 2px solid var(--primary-900);
    border-radius: var(--border-radius);
  }

  .view-all-link:hover {
    background: var(--primary-900);
    color: white;
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
    
    .category-grid-section {
      padding: var(--space-16) 0;
    }
  }
</style>