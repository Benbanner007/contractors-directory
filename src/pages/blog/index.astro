---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { blogPosts } from '../../data/blog';

const title = "Contractor Tips & Home Improvement Blog | Triangle Contractors Hub";
const description = "Expert advice on home improvement, contractor selection, and maintenance tips from trusted Triangle area professionals.";

// Sort posts by date (newest first) and separate featured posts
const sortedPosts = blogPosts.sort((a, b) => new Date(b.publishedDate).getTime() - new Date(a.publishedDate).getTime());
const featuredPosts = sortedPosts.filter(post => post.featured);
const regularPosts = sortedPosts.filter(post => !post.featured);
const allCategories = [...new Set(blogPosts.map(post => post.category))];
---

<BaseLayout title={title} description={description}>
  <div class="blog-page">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="container">
        <div class="hero-content">
          <h1>Expert Home Improvement Tips</h1>
          <p>Get insider advice from Triangle area contractors and home improvement professionals</p>
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="featured-section">
        <div class="container">
          <h2 class="section-title">Featured Articles</h2>
          <div class="featured-grid">
            {featuredPosts.map(post => (
              <article class="featured-post">
                <div class="post-image">
                  <img src={post.image || '/images/blog/default-blog.jpg'} alt={post.title} />
                  <div class="post-category">{post.category}</div>
                </div>
                <div class="post-content">
                  <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                  <p class="post-excerpt">{post.excerpt}</p>
                  <div class="post-meta">
                    <span class="author">By {post.author}</span>
                    <span class="date">{new Date(post.publishedDate).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}</span>
                    <span class="read-time">{post.readTime} min read</span>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Main Content -->
    <section class="blog-content">
      <div class="container">
        <div class="content-grid">
          <!-- Posts Grid -->
          <main class="posts-section">
            <h2 class="section-title">Latest Articles</h2>
            <div class="posts-grid">
              {regularPosts.map(post => (
                <article class="blog-post-card">
                  <div class="post-image">
                    <img src={post.image || '/images/blog/default-blog.jpg'} alt={post.title} />
                    <div class="post-category">{post.category}</div>
                  </div>
                  <div class="post-content">
                    <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                    <p class="post-excerpt">{post.excerpt}</p>
                    <div class="post-meta">
                      <span class="author">By {post.author}</span>
                      <span class="date">{new Date(post.publishedDate).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}</span>
                      <span class="read-time">{post.readTime} min read</span>
                    </div>
                    <div class="post-tags">
                      {post.tags.map(tag => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </main>

          <!-- Sidebar -->
          <aside class="blog-sidebar">
            <div class="sidebar-widget">
              <h3>Categories</h3>
              <ul class="category-list">
                {allCategories.map(category => (
                  <li>
                    <a href={`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}>
                      {category}
                      <span class="count">({blogPosts.filter(post => post.category === category).length})</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>

            <div class="sidebar-widget">
              <h3>Need a Contractor?</h3>
              <div class="cta-widget">
                <p>Find trusted, licensed contractors in the Triangle area</p>
                <a href="/contractors" class="sidebar-cta">Browse Contractors</a>
              </div>
            </div>

            <div class="sidebar-widget">
              <h3>Popular Tags</h3>
              <div class="tags-cloud">
                {[...new Set(blogPosts.flatMap(post => post.tags))].map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .blog-page {
    min-height: 100vh;
  }

  /* Hero Section */
  .blog-hero {
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 100%);
    color: white;
    padding: var(--space-16) 0 var(--space-12);
    text-align: center;
  }

  .hero-content h1 {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    line-height: 1.2;
  }

  .hero-content p {
    font-size: var(--font-size-lg);
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Featured Section */
  .featured-section {
    padding: var(--space-16) 0;
    background: var(--gray-50);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-8);
  }

  .featured-post {
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    transition: var(--transition);
  }

  .featured-post:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  /* Blog Content */
  .blog-content {
    padding: var(--space-16) 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  .blog-post-card {
    background: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: var(--transition);
  }

  .blog-post-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Post Images */
  .post-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .blog-post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-category {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background: var(--primary-600);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  /* Post Content */
  .post-content {
    padding: var(--space-6);
  }

  .post-content h3 {
    margin-bottom: var(--space-3);
  }

  .post-content h3 a {
    color: var(--gray-900);
    text-decoration: none;
    font-size: var(--font-size-xl);
    font-weight: 600;
    line-height: 1.3;
  }

  .post-content h3 a:hover {
    color: var(--primary-600);
  }

  .post-excerpt {
    color: var(--gray-600);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--gray-500);
    flex-wrap: wrap;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    background: var(--gray-100);
    color: var(--gray-700);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 500;
  }

  /* Sidebar */
  .blog-sidebar {
    position: sticky;
    top: var(--space-6);
  }

  .sidebar-widget {
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
    box-shadow: var(--shadow-sm);
  }

  .sidebar-widget h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--primary-100);
  }

  .category-list {
    list-style: none;
    padding: 0;
  }

  .category-list li {
    margin-bottom: var(--space-2);
  }

  .category-list a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--gray-700);
    text-decoration: none;
    padding: var(--space-2);
    border-radius: var(--border-radius);
    transition: var(--transition);
  }

  .category-list a:hover {
    background: var(--primary-50);
    color: var(--primary-700);
  }

  .count {
    font-size: var(--font-size-sm);
    color: var(--gray-500);
  }

  .cta-widget {
    text-align: center;
  }

  .cta-widget p {
    color: var(--gray-600);
    margin-bottom: var(--space-4);
  }

  .sidebar-cta {
    display: inline-flex;
    background: var(--primary-600);
    color: white;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
  }

  .sidebar-cta:hover {
    background: var(--primary-700);
    text-decoration: none;
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .posts-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .blog-hero {
      padding: var(--space-12) 0 var(--space-8);
    }

    .hero-content h1 {
      font-size: var(--font-size-3xl);
    }

    .featured-grid {
      grid-template-columns: 1fr;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .post-meta {
      flex-direction: column;
      gap: var(--space-2);
    }
  }
</style>