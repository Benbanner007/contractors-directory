    padding: var(--space-8);
    box-shadow: var(--shadow-md);
  }

  .form-step {
    display: none;
  }

  .form-step.active {
    display: block;
  }

  .step-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .step-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--gray-900);
    margin-bottom: var(--space-3);
