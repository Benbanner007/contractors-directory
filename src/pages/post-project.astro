---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Post Your Project - Get Quotes from Triangle Contractors";
const description = "Tell us about your home improvement project and get matched with qualified, licensed contractors in the Triangle area. Free quotes, no obligations.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Post Your Project",
  "description": description,
  "url": "https://trianglecontractorshub.com/post-project",
  "potentialAction": {
    "@type": "Action",
    "name": "Submit Project",
    "target": "https://trianglecontractorshub.com/post-project"
  }
};
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <div class="post-project-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <h1>Post Your Home Improvement Project</h1>
          <p class="hero-description">
            Tell us what you need done, and we'll connect you with up to 3 qualified, 
            licensed contractors in your area. Get free quotes and compare options.
          </p>
          <div class="hero-benefits">
            <div class="benefit">
              <span class="benefit-icon">üìù</span>
              <span>Free & Easy</span>
            </div>
            <div class="benefit">
              <span class="benefit-icon">‚ö°</span>
              <span>Quick Response</span>
            </div>
            <div class="benefit">
              <span class="benefit-icon">‚úÖ</span>
              <span>Verified Contractors</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Section -->
    <section class="form-section">
      <div class="container">
        <div class="form-wrapper">
          <div class="form-container">
            <form id="projectForm" class="project-form">
              <!-- Step 1: Project Type -->
              <div class="form-step active" data-step="1">
                <div class="step-header">
                  <h2>What type of project do you need help with?</h2>
                  <p>Select the category that best describes your project</p>
                </div>
                
                <div class="project-categories">
                  <label class="category-option">
                    <input type="radio" name="projectType" value="plumbing" required>
                    <div class="category-card">
                      <span class="category-icon">üîß</span>
                      <span class="category-name">Plumbing</span>
                      <span class="category-desc">Pipes, fixtures, water heaters</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="electrical" required>
                    <div class="category-card">
                      <span class="category-icon">‚ö°</span>
                      <span class="category-name">Electrical</span>
                      <span class="category-desc">Wiring, outlets, lighting</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="hvac" required>
                    <div class="category-card">
                      <span class="category-icon">‚ùÑÔ∏è</span>
                      <span class="category-name">HVAC</span>
                      <span class="category-desc">Heating, cooling, ventilation</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="roofing" required>
                    <div class="category-card">
                      <span class="category-icon">üè†</span>
                      <span class="category-name">Roofing</span>
                      <span class="category-desc">Repairs, replacement, gutters</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="flooring" required>
                    <div class="category-card">
                      <span class="category-icon">üèóÔ∏è</span>
                      <span class="category-name">Flooring</span>
                      <span class="category-desc">Installation, refinishing</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="kitchen-bath" required>
                    <div class="category-card">
                      <span class="category-icon">üöø</span>
                      <span class="category-name">Kitchen & Bath</span>
                      <span class="category-desc">Remodeling, fixtures</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="painting" required>
                    <div class="category-card">
                      <span class="category-icon">üé®</span>
                      <span class="category-name">Painting</span>
                      <span class="category-desc">Interior, exterior</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="general-contractor" required>
                    <div class="category-card">
                      <span class="category-icon">üî®</span>
                      <span class="category-name">General Contracting</span>
                      <span class="category-desc">Renovations, additions</span>
                    </div>
                  </label>
                  
                  <label class="category-option">
                    <input type="radio" name="projectType" value="other" required>
                    <div class="category-card">
                      <span class="category-icon">üìã</span>
                      <span class="category-name">Other</span>
                      <span class="category-desc">Tell us what you need</span>
                    </div>
                  </label>
                </div>
                
                <div class="step-actions">
                  <button type="button" class="btn-next" onclick="nextStep()">Continue</button>
                </div>
              </div>

              <!-- Step 2: Project Details -->
              <div class="form-step" data-step="2">
                <div class="step-header">
                  <h2>Tell us about your project</h2>
                  <p>The more details you provide, the better we can match you with the right contractor</p>
                </div>
                
                <div class="form-fields">
                  <div class="form-group">
                    <label for="projectTitle">Project Title *</label>
                    <input type="text" id="projectTitle" name="projectTitle" required
                           placeholder="e.g., Kitchen faucet replacement, Bathroom remodel">
                  </div>
                  
                  <div class="form-group">
                    <label for="projectDescription">Detailed Description *</label>
                    <textarea id="projectDescription" name="projectDescription" rows="6" required
                              placeholder="Describe your project in detail. What needs to be done? What's the current situation? Any specific requirements or preferences?"></textarea>
                  </div>
                  
                  <div class="form-row">
                    <div class="form-group">
                      <label for="timeline">When do you need this done?</label>
                      <select id="timeline" name="timeline">
                        <option value="">Select timeline</option>
                        <option value="emergency">Emergency (within 24 hours)</option>
                        <option value="asap">ASAP (within a week)</option>
                        <option value="flexible">I'm flexible</option>
                        <option value="1-2weeks">1-2 weeks</option>
                        <option value="1month">Within 1 month</option>
                        <option value="2-3months">2-3 months</option>
                        <option value="planning">Just planning ahead</option>
                      </select>
                    </div>
                    
                    <div class="form-group">
                      <label for="budget">Estimated Budget</label>
                      <select id="budget" name="budget">
                        <option value="">Select budget range</option>
                        <option value="under-500">Under $500</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000-2500">$1,000 - $2,500</option>
                        <option value="2500-5000">$2,500 - $5,000</option>
                        <option value="5000-10000">$5,000 - $10,000</option>
                        <option value="10000-25000">$10,000 - $25,000</option>
                        <option value="25000-50000">$25,000 - $50,000</option>
                        <option value="over-50000">Over $50,000</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label for="propertyType">Property Type</label>
                    <select id="propertyType" name="propertyType">
                      <option value="">Select property type</option>
                      <option value="single-family">Single Family Home</option>
                      <option value="condo">Condo/Townhouse</option>
                      <option value="apartment">Apartment</option>
                      <option value="commercial">Commercial Property</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                </div>
                
                <div class="step-actions">
                  <button type="button" class="btn-back" onclick="prevStep()">Back</button>
                  <button type="button" class="btn-next" onclick="nextStep()">Continue</button>
                </div>
              </div>

              <!-- Step 3: Location & Contact -->
              <div class="form-step" data-step="3">
                <div class="step-header">
                  <h2>Where is your project located?</h2>
                  <p>We'll find contractors in your area</p>
                </div>
                
                <div class="form-fields">
                  <div class="form-group">
                    <label for="address">Project Address *</label>
                    <input type="text" id="address" name="address" required
                           placeholder="123 Main St, City, State ZIP">
                  </div>
                  
                  <div class="form-row">
                    <div class="form-group">
                      <label for="city">City *</label>
                      <select id="city" name="city" required>
                        <option value="">Select city</option>
                        <option value="Raleigh">Raleigh</option>
                        <option value="Durham">Durham</option>
                        <option value="Chapel Hill">Chapel Hill</option>
                        <option value="Cary">Cary</option>
                        <option value="Apex">Apex</option>
                        <option value="Morrisville">Morrisville</option>
                        <option value="Wake Forest">Wake Forest</option>
                        <option value="Garner">Garner</option>
                        <option value="Holly Springs">Holly Springs</option>
                        <option value="Fuquay-Varina">Fuquay-Varina</option>
                        <option value="Other">Other Triangle Area</option>
                      </select>
                    </div>
                    
                    <div class="form-group">
                      <label for="zipCode">ZIP Code *</label>
                      <input type="text" id="zipCode" name="zipCode" required 
                             pattern="[0-9]{5}" placeholder="27605">
                    </div>
                  </div>
                  
                  <div class="contact-section">
                    <h3>Your Contact Information</h3>
                    <p>Contractors will use this to send you quotes</p>
                    
                    <div class="form-row">
                      <div class="form-group">
                        <label for="firstName">First Name *</label>
                        <input type="text" id="firstName" name="firstName" required>
                      </div>
                      <div class="form-group">
                        <label for="lastName">Last Name *</label>
                        <input type="text" id="lastName" name="lastName" required>
                      </div>
                    </div>
                    
                    <div class="form-row">
                      <div class="form-group">
                        <label for="email">Email Address *</label>
                        <input type="email" id="email" name="email" required>
                      </div>
                      <div class="form-group">
                        <label for="phone">Phone Number *</label>
                        <input type="tel" id="phone" name="phone" required>
                      </div>
                    </div>
                  </div>
                  
                  <div class="preferences-section">
                    <h3>Communication Preferences</h3>
                    <div class="checkbox-group">
                      <label class="checkbox-item">
                        <input type="checkbox" name="contactMethod" value="email" checked>
                        <span>Email me quotes and updates</span>
                      </label>
                      <label class="checkbox-item">
                        <input type="checkbox" name="contactMethod" value="phone">
                        <span>Call me to discuss my project</span>
                      </label>
                      <label class="checkbox-item">
                        <input type="checkbox" name="contactMethod" value="text">
                        <span>Text me important updates</span>
                      </label>
                    </div>
                  </div>
                </div>
                
                <div class="step-actions">
                  <button type="button" class="btn-back" onclick="prevStep()">Back</button>
                  <button type="submit" class="btn-submit">Submit Project</button>
                </div>
              </div>
            </form>
          </div>
          
          <!-- Sidebar Info -->
          <div class="info-sidebar">
            <div class="info-card">
              <h3>How it works</h3>
              <div class="steps-list">
                <div class="step-item">
                  <span class="step-number">1</span>
                  <div class="step-content">
                    <strong>Tell us about your project</strong>
                    <p>Provide details about what you need done</p>
                  </div>
                </div>
                <div class="step-item">
                  <span class="step-number">2</span>
                  <div class="step-content">
                    <strong>Get matched with contractors</strong>
                    <p>We'll find qualified professionals in your area</p>
                  </div>
                </div>
                <div class="step-item">
                  <span class="step-number">3</span>
                  <div class="step-content">
                    <strong>Receive free quotes</strong>
                    <p>Compare proposals and choose the best fit</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="info-card">
              <h3>Why choose us?</h3>
              <ul class="benefits-list">
                <li>‚úì All contractors are licensed and insured</li>
                <li>‚úì Background checked professionals</li>
                <li>‚úì Free quotes, no obligations</li>
                <li>‚úì Local Triangle area experts</li>
