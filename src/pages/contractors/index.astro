    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    font-size: var(--font-size-2xl);
    color: var(--gray-900);
    margin-bottom: var(--space-4);
  }
  
  .cta-content p {
    color: var(--gray-600);
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-6);
  }
  
