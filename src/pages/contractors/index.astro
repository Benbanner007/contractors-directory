  }
  
  .contractor-card .action-buttons {
    display: flex;
    gap: var(--space-3);
  }
  
  .contractor-card .btn-quote, 
  .contractor-card .btn-view {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--border-radius);
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    transition: var(--transition);
    border: none;
