---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/ui/SearchBar.astro';
import CategoryGrid from '../components/contractor/CategoryGrid.astro';
import { contractorDb } from '../lib/database';

// Get real data from database
const allContractors = contractorDb.getAll();
const totalReviews = allContractors.reduce((sum, c) => sum + c.reviewCount, 0);
const avgRating = allContractors.length > 0 
  ? (allContractors.reduce((sum, c) => sum + c.rating, 0) / allContractors.length).toFixed(1)
  : '0';

const title = "Triangle Contractors Hub - Find Trusted Local Contractors in Raleigh, Durham & Chapel Hill";
const description = "Connect with vetted, licensed contractors in the Triangle area. Get quotes from top-rated plumbers, electricians, roofers, and more. Serving Raleigh, Durham, Chapel Hill, and surrounding areas.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Triangle Contractors Hub",
  "description": description,
  "url": "https://trianglecontractorshub.com",
  "areaServed": [
    {
      "@type": "City",
      "name": "Raleigh",
      "addressRegion": "NC"
    },
    {
      "@type": "City", 
      "name": "Durham",
      "addressRegion": "NC"
    },
    {
      "@type": "City",
      "name": "Chapel Hill", 
      "addressRegion": "NC"
    }
  ],
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://trianglecontractorshub.com/search?q={search_term}",
    "query-input": "required name=search_term"
  }
};
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-background">
        <div class="hero-overlay"></div>
      </div>
      <div class="container hero-content">
        <div class="hero-text">
          <h1 class="hero-title">
            Find Trusted Contractors in the Triangle
          </h1>
          <p class="hero-description">
            Connect with vetted, licensed professionals for your next home improvement project. 
            Serving Raleigh, Durham, Chapel Hill, and surrounding areas.
          </p>
        </div>
        
        <div class="hero-search">
          <SearchBar placeholder="Search for contractors by name, service, or location..." showLocationInput={false} />
        </div>
        
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">{allContractors.length}+</span>
            <span class="stat-label">Verified Contractors</span>
          </div>
          <div class="stat">
            <span class="stat-number">{totalReviews}+</span>
            <span class="stat-label">Customer Reviews</span>
          </div>
          <div class="stat">
            <span class="stat-number">{avgRating}‚òÖ</span>
            <span class="stat-label">Average Rating</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Category Grid -->
    <CategoryGrid />

    <!-- Trust Indicators -->
    <section class="trust-section">
      <div class="container">
        <div class="trust-content">
          <h2>Why Choose Triangle Contractors Hub?</h2>
          <div class="trust-features">
            <div class="trust-feature">
              <div class="trust-icon">‚úì</div>
              <h3>Verified Professionals</h3>
              <p>All contractors are licensed, insured, and background checked</p>
            </div>
            <div class="trust-feature">
              <div class="trust-icon">‚≠ê</div>
              <h3>Real Reviews</h3>
              <p>Authentic reviews from verified customers in the Triangle area</p>
            </div>
            <div class="trust-feature">
              <div class="trust-icon">üí¨</div>
              <h3>Free Quotes</h3>
              <p>Get multiple quotes from qualified contractors at no cost</p>
            </div>
            <div class="trust-feature">
              <div class="trust-icon">üîí</div>
              <h3>Secure Platform</h3>
              <p>Your project details and personal information are protected</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Start Your Project?</h2>
          <p>Join thousands of Triangle area homeowners who found their perfect contractor through our platform.</p>
          <div class="cta-buttons">
            <a href="/contractors" class="cta-button primary">Browse Contractors</a>
            <a href="/post-project" class="cta-button secondary">Post Your Project</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    padding: var(--space-24) 0;
    background: white;
    text-align: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.8);
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-text {
    margin-bottom: var(--space-12);
  }

  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: 700;
    color: var(--primary-900);
    margin-bottom: var(--space-6);
    line-height: 1.2;
  }

  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--gray-700);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .hero-search {
    margin-bottom: var(--space-12);
    display: flex;
    justify-content: center;
  }

  .hero-search :global(.search-container) {
    max-width: 600px;
    width: 100%;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-12);
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .stat-number {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--primary-900);
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--gray-700);
  }

  /* Trust Section */
  .trust-section {
    padding: var(--space-20) 0;
    background: white;
  }

  .trust-content {
    text-align: center;
  }

  .trust-content h2 {
    font-size: var(--font-size-3xl);
    color: var(--primary-900);
    margin-bottom: var(--space-16);
  }

  .trust-features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    max-width: 1200px;
    margin: 0 auto;
  }

  .trust-feature {
    text-align: center;
    padding: var(--space-6);
  }

  .trust-icon {
    font-size: 3rem;
    color: var(--primary-900);
    margin-bottom: var(--space-4);
  }

  .trust-feature h3 {
    font-size: var(--font-size-xl);
    color: var(--primary-900);
    margin-bottom: var(--space-3);
  }

  .trust-feature p {
    color: var(--gray-700);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    padding: var(--space-20) 0;
    background: var(--gray-50);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--font-size-3xl);
    color: var(--primary-900);
    margin-bottom: var(--space-4);
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    color: var(--gray-700);
    margin-bottom: var(--space-8);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    padding: var(--space-4) var(--space-8);
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition);
  }

  .cta-button.primary {
    background: var(--primary-900);
    color: white;
    border: 2px solid var(--primary-900);
  }

  .cta-button.primary:hover {
    background: white;
    color: var(--primary-900);
    text-decoration: none;
  }

  .cta-button.secondary {
    background: white;
    color: var(--primary-900);
    border: 2px solid var(--primary-900);
  }

  .cta-button.secondary:hover {
    background: var(--primary-900);
    color: white;
    text-decoration: none;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .trust-features {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--font-size-4xl);
    }
    
    .hero-description {
      font-size: var(--font-size-lg);
    }
    
    .hero-stats {
      gap: var(--space-8);
    }
    
    .stat-number {
      font-size: var(--font-size-2xl);
    }
    
    .trust-features {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-button {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>
